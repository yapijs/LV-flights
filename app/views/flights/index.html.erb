<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<table>
  <thead>
    <tr>
      <th>Callsign</th>
      <th>Estdepartureairport</th>
      <th>Estarrivalairport</th>
      <th>Firstseen</th>
      <th>Lastseen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.callsign %></td>
        <td><%= flight.estDepartureAirport %></td>
        <td><%= flight.estArrivalAirport %></td>
        <td><%= flight.firstSeen %></td>
        <td><%= flight.lastSeen %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

